{
  "type": "tradle.Model",
  "title": "MyCloud Configuration",
  "id": "tradle.cloud.Configuration",
  "subClassOf": "tradle.Form",
  "properties": {
    "name": {
      "type": "string",
      "description": "the name of your organization"
    },
    "adminEmail": {
      "type": "string",
      "title": "AWS admin email",
      "description": "individual or group that manages your AWS account",
      "range": "email"
    },
    "hrEmail": {
      "type": "string",
      "title": "HR email",
      "description": "individual or group that manages employee onboarding",
      "range": "email"
    },
    "domain": {
      "type": "string",
      "description": "top level domain you own",
      "pattern": "^[a-zA-Z0-9-_.]*$"
    },
    "stackPrefix": {
      "type": "string",
      "description": "AWS stack name prefix, of the format tdl-xxxx-tdl (e.g. tdl-example-tdl)",
      "pattern": "^tdl-[a-zA-Z0-9-]+-ltd$",
      "default": "tdl-tradle-tdl"
    }
  },
  "viewCols": [
    "name",
    "domain",
    "adminEmail",
    "hrEmail"
  ],
  "editCols": [
    "name",
    "domain",
    "adminEmail",
    "hrEmail",
    "stackPrefix"
  ],
  "required": [
    "name",
    "domain",
    "adminEmail",
    "hrEmail",
    "stackPrefix"
  ]
}
