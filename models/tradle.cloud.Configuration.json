{
  "type": "tradle.Model",
  "title": "MyCloud Configuration",
  "id": "tradle.cloud.Configuration",
  "subClassOf": "tradle.Form",
  "properties": {
    "name": {
      "type": "string",
      "description": "the name of your organization"
    },
    "adminEmail": {
      "type": "string",
      "title": "AWS admin email",
      "description": "individual or group that manages your AWS account",
      "range": "email"
    },
    "hrEmail": {
      "type": "string",
      "title": "HR email",
      "description": "individual or group that manages employee onboarding",
      "range": "email"
    },
    "domain": {
      "type": "string",
      "description": "top level domain you own",
      "pattern": "^[a-zA-Z0-9-_.]*$"
    },
    "region": {
      "type": "object",
      "ref": "tradle.cloud.AWSRegion",
      "description": "AWS Region"
    },
    "stackPrefix": {
      "type": "string",
      "title": "Stack name, must be alphanumeric, e.g. mytradle",
      "pattern": "^[a-zA-Z0-9-]+$",
      "default": "tradle"
    }
  },
  "viewCols": [
    "name",
    "domain",
    "adminEmail",
    "hrEmail"
  ],
  "editCols": [
    "name",
    "domain",
    "region",
    "adminEmail",
    "hrEmail",
    "stackPrefix"
  ],
  "required": [
    "name",
    "domain",
    "adminEmail",
    "hrEmail",
    "region",
    "stackPrefix"
  ]
}
